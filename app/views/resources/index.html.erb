<div id="title">
  Resources
</div>
<div class="container"  id="resource-container-wrapper">
  <div class="row">
    <div class="col-3" id="filter-column">
<!--      <div class="row">-->
<!--        <div class="col-12" id="filter-header">-->
<!--          Filters-->
<!--        </div>-->
<!--      </div>-->

      <div class="row">
        <div class="col-12">
          <%= form_tag("/resources.html", method: :get) do %>
            <div class="row">
              <div class="col-12" id="filter-header">
                <%= submit_tag 'Filter', class: 'btn btn-outline-dark btn-lg', id: 'filter-button'%>
              </div>
            </div>

            <% @has_many_hash.each do |association, values| %>
              <div id="association-name">
                <%= association.capitalize %>
              </div>
              <div class="content">
                <% values.each do |val| %>
                  <%= val %>
                  <%= check_box_tag association+'[]', val %>
                  <br/>
                <% end %>
              </div>
              <br/>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-8" id="resource-column">
      <div class="row">
        <div class="col-12" id = "result-header">
          Results
        </div>

      </div>
      <% @resources.each do |resource| %>
        <div class="row resource-container">
          <div class="col">
            <div class="resource-title">
              <%= resource.title %>
            </div>
            <div class="resource-url">
              URL: <a href="<%= resource.url %>"><%= resource.url %></a>
            </div>
            <div class="resource-desc">
              Description: <%= resource.desc %>
            </div>
            <div class="resource-location">
              Location: <%= resource.location %>
            </div>
            <div class="resource-email">
              Contact Email: <%= resource.contact_email %>
            </div>
            <div class="resource-types">
              Types: <%= resource.types.collect(&:val) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
